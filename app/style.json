{
  "version": 8,
  "name": "Topotrek Style",
  "pitch": 45,
  "zoom": 12,
  "center": [11.2543, 43.7672],
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "osm": {
      "type": "vector",
      "tiles": [
        "https://demotiles.maplibre.org/planet/{z}/{x}/{y}.mvt"
      ],
      "maxzoom": 14,
      "attribution": "Â© <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap</a> contributors"
    },
    "terrain": {
      "type": "raster-dem",
      "tiles": [
        "https://s3.amazonaws.com/elevation-tiles-prod/terrarium/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "encoding": "terrarium",
      "maxzoom": 15,
      "attribution": "NASA, USGS"
    }
  },
  "terrain": {
    "source": "terrain",
    "exaggeration": 1.5
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "water",
      "source": "osm",
      "source-layer": "water",
      "type": "fill",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "osm",
      "source-layer": "landuse",
      "filter": [ "==", "class", "residential" ],
      "paint": {
        "fill-color": "#e0e0e0"
      }
    },
    {
      "id": "transportation",
      "type": "line",
      "source": "osm",
      "source-layer": "transportation",
      "paint": {
        "line-color": "#9c9c9c",
        "line-width": 1.5
      }
    },
    {
      "id": "buildings",
      "source": "osm",
      "source-layer": "building",
      "type": "fill",
      "paint": {
          "fill-color": "#d9d9d9"
      }
    },
    {
      "id": "hillshade",
      "type": "hillshade",
      "source": "terrain",
      "layout": { "visibility": "visible" },
      "paint": {
        "hillshade-shadow-color": "#473B3B",
        "hillshade-highlight-color": "#FFFFFF",
        "hillshade-accent-color": "#473B3B",
        "hillshade-exaggeration": 0.4
      }
    }
  ]
}
