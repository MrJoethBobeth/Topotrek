{
  "version": 8,
  "name": "Topotrek Style",
  "pitch": 45,
  "zoom": 12,
  "center": [-71.5, 44.1],
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "basemap-osm": {
      "type": "vector",
      "url": "pmtiles://https://pub-1636e051e3464ab48e64a0f8d95a6444.r2.dev/basemap/us-northeast-osm.pmtiles",
      "attribution": "Â© <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap</a> contributors"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "water",
      "source": "osm",
      "source-layer": "water",
      "type": "fill",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "landcover",
      "source": "osm",
      "source-layer": "landcover",
      "type": "fill",
      "paint": {
        "fill-color": "#e0e0e0"
      }
    },
    {
      "id": "park",
      "source": "osm",
      "source-layer": "park",
      "type": "fill",
      "paint": {
        "fill-color": "#d8e8c8"
      }
    },
    {
      "id": "transportation_area",
      "source": "osm",
      "source-layer": "transportation",
      "type": "fill",
      "paint": {
        "fill-color": "#cfcfcf"
      }
    },
    {
      "id": "roads",
      "source": "osm",
      "source-layer": "transportation",
      "type": "line",
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#ccc",
        "line-width": {
          "stops": [
            [12, 0.5],
            [20, 18]
          ]
        }
      }
    },
    {
      "id": "roads-bridges",
      "source": "osm",
      "source-layer": "transportation",
      "type": "line",
      "filter": ["all", ["==", "brunnel", "bridge"]],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#ccc",
        "line-width": {
          "stops": [
            [12, 0.5],
            [20, 18]
          ]
        }
      }
    },
    {
      "id": "place-labels",
      "source": "osm",
      "source-layer": "place",
      "type": "symbol",
      "layout": {
        "text-field": ["get", "name:en"],
        "text-font": ["Noto Sans Regular"],
        "text-size": 12,
        "text-variable-anchor": ["top", "bottom", "left", "right"],
        "text-radial-offset": 0.5
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "rgba(255,255,255,0.8)",
        "text-halo-width": 1.2
      }
    }
  ]
}
